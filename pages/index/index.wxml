<!--index.wxml-->
<view>
    <view class="header">
        <view class="header-box">
            <view class="header-hi color-theme">{{hi}}</view>
            <view class="header-time color-dark">{{date}} | {{day}}</view>
        </view>
    </view>
    <view class="container">
         <task update="{{update}}" /> 
    </view>
    <text class="color-dark type-btn iconfont icon-type" bindtap="selctType"></text>
    <text class="color-theme add-btn iconfont icon-add" bindtap="add"></text>
    <text class="color-dark info-btn iconfont icon-info" bindtap="about"></text>
</view>