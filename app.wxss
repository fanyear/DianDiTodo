/**app.wxss**/
/* iconfont */
@import "/assets/iconfont/iconfont";

/* 颜色 */
/* 绿 */
.color-theme {
    color: #65c0ba;
}
.bg-theme {
    background: #65c0ba;
}

/* 灰 */
.color-dark {
    color: #C5C3C2;
}
.bg-dark {
    background: #E7E7E7;
}
/* 红 */
.color-red {
    color: #FF0033;
}
.bg-red {
    background: #FF0033;
}

/* 深灰 */
.bg-darkest {
    background: #aaa;
}
.color-darkest {
    color: #aaa;
}

.color-white {
    color: #fff;
}


/* 页面容器 */
.container {
    height: 100%;
    box-sizing: border-box;
    width: 100%;
    padding:0rpx 0rpx 0rpx;
    /* 字体 */
    font-size: 40rpx;  
}


/* 栅格  */
.row {
  display: block;
  margin: 0px;
}

.col {
  display: flex;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
  font-size: 17px;
}

.col>.col-1, .col-2, .col-3, .col-4, .col-5, .col-6, .col-7, .col-8, .col-9,
.col-10, .col-11, .col-12 {
  overflow: hidden;
}

.col-1 {
  width: 8.33333333333333%;
}

.col-2 {
  width: 16.6666666666666%;
}

.col-3 {
  width: 25%;
}

.col-4 {
  width: 33.3333333333333%;
}

.col-5 {
  width: 41.6666666666666%;
}

.col-6 {
  width: 50%;
}

.col-7 {
  width: 58.333333333333333%;
}

.col-8 {
  width: 66.66666666666666%;
}

.col-9 {
  width: 75%;
}

.col-10 {
  width: 83.33333333333333%;
}

.col-11 {
  width: 91.66666666666666%;
}

.col-12 {
  width: 100%;
}

.x-center {
  text-align: center;
}
